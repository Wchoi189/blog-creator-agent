# configs/config.yaml
# Blog Creator Agent Configuration

# -----------------------------------------------------------------------------
# General Application Settings
# -----------------------------------------------------------------------------
app:
  # The timezone for the application
  timezone: "Asia/Seoul"

  # A file used to identify the project root directory
  root_marker: "pyproject.toml"

  # The default profile to use if the ENV_PROFILE environment variable is not set
  default_profile: "openai"

  # Directory names for storing data and logs, relative to the project root
  directories:
    logs: "logs"
    data: "data"
    uploads: "backend/data/uploads"

# -----------------------------------------------------------------------------
# Environment Profiles
# - Define different configurations for various environments
# - The active profile is selected via the `ENV_PROFILE` environment variable
# -----------------------------------------------------------------------------
profiles:
  openai:
    description: "OpenAI API (recommended)"
    llm_provider: "openai"
    llm_model: "gpt-4o-mini"

  ollama:
    description: "Local Ollama for privacy"
    llm_provider: "ollama"
    llm_model: "llama3.1:8b"

# -----------------------------------------------------------------------------
# LLM Providers & Models
# -----------------------------------------------------------------------------
llm_providers:
  openai:
    - "gpt-4o"
    - "gpt-4o-mini"
    - "gpt-4-turbo"
    - "gpt-3.5-turbo"
  ollama:
    - "llama3.1:8b"
    - "gemma3:4b"
    - "mistral:7b"

# -----------------------------------------------------------------------------
# Document Processing Settings
# -----------------------------------------------------------------------------
document_processing:
  # Configuration for splitting documents into chunks
  text_splitter:
    chunk_size: 1024
    chunk_overlap: 256

  # Maximum upload size in bytes (50MB)
  max_upload_size: 52428800

  # Supported file types
  supported_types:
    - ".pdf"
    - ".md"
    - ".txt"
    - ".markdown"

# -----------------------------------------------------------------------------
# Agent Settings
# -----------------------------------------------------------------------------
agent:
  # Configuration for the Tavily Search tool (optional)
  tavily:
    max_results: 3

# -----------------------------------------------------------------------------
# Redis Settings
# -----------------------------------------------------------------------------
redis:
  host: "localhost"
  port: 6379
  url: "redis://localhost:6379"

# -----------------------------------------------------------------------------
# Backend API Settings
# -----------------------------------------------------------------------------
backend:
  host: "0.0.0.0"
  port: 8002
  cors_origins:
    - "http://localhost:3000"
    - "http://localhost:3002"

# -----------------------------------------------------------------------------
# Default Fallback Settings
# -----------------------------------------------------------------------------
defaults:
  text_splitter:
    chunk_size: 1000
    chunk_overlap: 200
  agent:
    tavily:
      max_results: 3
